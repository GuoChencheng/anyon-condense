{
  "$id": "https://ac.io/schemas/umtc_input.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ac-umtc input (v0)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "format",
    "version",
    "encoding",
    "number_field",
    "category_type",
    "simple_objects",
    "dual",
    "fusion_rules"
  ],
  "properties": {
    "format": { "const": "ac-umtc" },
    "version": { "type": "string", "minLength": 1 },
    "encoding": { "enum": ["exact", "float"] },
    "number_field": {
      "type": "string",
      "pattern": "^cyclotomic\\([1-9][0-9]*\\)$"
    },
    "category_type": { "const": "umtc" },
    "_meta": { "type": "object" },

    "simple_objects": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "minItems": 1,
      "uniqueItems": true
    },

    "dual": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^.+$": { "type": "string", "minLength": 1 }
      }
    },

    "fusion_rules": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^\\(.+?,.+\\)$": {
          "type": "object",
          "additionalProperties": false,
          "patternProperties": {
            "^.+$": { "type": "integer", "minimum": 1 }
          }
        }
      }
    },

    "F_symbols": {
      "description": "v0 占位：允许任意对象结构，后续版本细化",
      "type": ["object", "array", "null"]
    },

    "R_symbols": {
      "description": "v0 占位：允许任意对象结构，后续版本细化",
      "type": ["object", "array", "null"]
    }
  }
}
